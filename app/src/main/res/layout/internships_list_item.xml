<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/grey_rounded_backgroud"
    >

    <TextView
        android:id="@+id/internship_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:textStyle="bold"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/internship_company_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zensar Technologies, "
        android:textColor="#767676"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/internship_title_txt" />

    <TextView
        android:id="@+id/internship_location_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JHB"
        android:textColor="#767676"
        app:layout_constraintStart_toEndOf="@+id/internship_company_txt"
        app:layout_constraintTop_toTopOf="@+id/internship_company_txt" />

    <TextView
        android:id="@+id/internship_timestamp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="2 weeks ago"
        android:textColor="#767676"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/internship_company_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>